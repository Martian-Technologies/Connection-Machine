{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 16,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "debug",
			"displayName": "Debug",
			"binaryDir": "build",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"GATALITY_BUILD_APP": "ON"
			}
		},
		{
			"name": "release",
			"displayName": "Release",
			"binaryDir": "build-release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"GATALITY_BUILD_APP": "ON"
			}
		},
		{
			"name": "distribute",
			"displayName": "Distribute",
			"binaryDir": "build-release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"GATALITY_BUILD_APP": "ON",
				"GATALITY_DISTRIBUTE_APP": "ON"
			}
		},
		{
			"name": "tests",
			"displayName": "Tests",
			"binaryDir": "build-tests",
			"cacheVariables": {
			    "CMAKE_BUILD_TYPE": "Debug",
			    "GATALITY_BUILD_TESTS": "ON",
				"GATALITY_BUILD_APP": "OFF"
			}
		}
	],
	"buildPresets": [
		{
			"name": "debug",
			"displayName": "Build Debug",
			"configurePreset": "debug",
			"configuration": "Debug",
			"jobs": 8
		},
		{
			"name": "release",
			"displayName": "Build Release",
			"configurePreset": "release",
			"configuration": "Release",
			"jobs": 8
		},
		{
			"name": "distribute",
			"displayName": "Build Distribute",
			"configurePreset": "distribute",
			"configuration": "Distribute",
			"jobs": 8
		},
		{
			"name": "tests",
			"displayName": "Build Tests",
			"configurePreset": "tests",
			"configuration": "Debug",
			"jobs": 8
		}
	],
	"workflowPresets": [
		{
			"name": "debug",
			"displayName": "Debug Build Workflow",
			"steps": [
				{
					"type": "configure",
					"name": "debug"
				},
				{
					"type": "build",
					"name": "debug"
				}
			]
		},
		{
			"name": "dist",
			"displayName": "Distribution Workflow",
			"steps": [
				{
					"type": "configure",
					"name": "distribute"
				},
				{
					"type": "build",
					"name": "distribute"
				}
			]
		}
	]
}
