/* Menu Tree Styles */

.menutree {
	background-color: #2e2e2e;
	border-radius: 0.3em;
	margin: 0.5em 0.1em;
	display: flex;
	flex-direction: column;
	min-height: 2rem;
}

.menutree * {
	display: block;
}

.menutree ul ul {
	padding-left: 0.5rem;
}

.menutree li span {
	padding: 0em 0.2em;
	display: inline;
	vertical-align: top;
}

.menutree li div {
	display: inline-block;
}

.menutree li {
	padding: 0.1em 0.1em;
}

.collapsed div ul {
	display: none;
}
