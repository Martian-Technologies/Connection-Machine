#sim-controls-area {
	display: flex;
	flex-direction: column;
	gap: 4dp;
	padding: 2dp;
	font-size: 16dp;
	border-radius: 0.3em;
}

#sim-controls-buttons {
	display: flex;
	flex-direction: row;
	align-items: center;
	gap: 8dp;
	padding: 2dp;
	font-size: 16dp;
	border-radius: 0.3em;
}

#toggle-simulation {
	color: #252525;
	height: 20dp;
	background-color: #ffffff90;
	font-size: 12dp;
	border-radius: 0.3em;
	padding: 0.2em;
}

#real-tps-display {
	color: #252525;
	height: 20dp;
	width: auto;
	font-size: 12dp;
	padding: 0.2em;
}

#toggle-simulation:hover {
	background-color: #efefef90;;
}

#toggle-simulation:active, #toggle-simulation.checked {
	background-color: #c5c5c590;;
}

#realistic-button {
	color: #ffffff;
	height: 20dp;
	width: 20dp;
	background-color: #4d6fb8e0;
	font-size: 12dp;
	font-weight: bold;
	border-radius: 0.3em;
	padding: 0.2em;
	text-align: center;
}

#realistic-button:hover {
	background-color: #376cdee0;
}

#realistic-button:active, #realistic-button.checked {
	background-color: #b84d4de0;
}

#realistic-button:active:hover, #realistic-button.checked:hover {
	background-color: #de3737e0;
}

#limit-speed-checkbox {
	margin: 0;
	width: 20dp;
	height: 20dp;
	border: 1dp #3d8d3dff;
	border-radius: 0.3em;
	background-color: #3aa53a20;
	padding: 0;
	display: inline-flex;
	align-items: center;
	justify-content: center;
}

#limit-speed-checkbox:hover {
	background-color: #3aa53a40;
}

#limit-speed-checkbox:checked {
	background-color: #3d8d3dff;
	border-color: #3d8d3dff;
}

#limit-speed-checkbox:checked:hover {
	background-color: #3d8d3da0;
}

#tps-input {
	background-color: #252525;
	color: #fff;
	height: 18dp;
	width: 60dp;
}
