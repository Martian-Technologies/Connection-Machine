/* Left Sidebar Styles */

tabset {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
	
}

tabset panels {
	flex-grow: 1;
	position: relative;	
	width: 100%;
}

tabset panels panel {
	position: absolute;
	top: 0;
	bottom: 0;
	width: 100%;
	overflow-y: scroll;
}

tabset tabs tab {
	margin: 0.4em;
	padding: 0.3em;
	border-radius: 0.25rem;
	background-color: #0b0b0b;
	display: inline-block;
}

tabset tabs  {
	width: 100%;
	display: block;
}
